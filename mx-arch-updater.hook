[Trigger]
Type = Package
Operation = Install
Target = mx-arch-updater

[Action]
Description = Enable MX Arch Updater tray service
When = PostTransaction
Exec = /bin/sh -c 'echo "MX Arch Updater hook running at $(date)" >> /tmp/mx-updater-hook.log; for user in $(ls /home); do if [ -d "/home/$user" ] && [ -f "/home/$user/.config/systemd/user" ]; then su - $user -c "/usr/bin/systemctl --user enable mx-arch-updater-tray.service 2>/dev/null" 2>/dev/null || true; fi; done'
Depends = systemd